<?xml version="1.0" encoding="UTF-8"?>
<manifest>
    <!-- Raspberry Pi -->
    <project path="device/brcm/rpi3" name="lineage-rpi/android_device_brcm_rpi3" />
    <project path="device/brcm/rpi4" name="lineage-rpi/android_device_brcm_rpi4" />
    <project path="device/brcm/rpi-common" name="lineage-rpi/android_device_brcm_rpi-common" />
    <project path="kernel/brcm/rpi" name="lineage-rpi/android_kernel_brcm_rpi" />
    <project path="vendor/brcm" name="lineage-rpi/proprietary_vendor_brcm" />

    <!-- Graphics -->
    <remove-project name="platform/external/drm_hwcomposer" />
    <remove-project name="platform/external/libdrm" />
    <remove-project name="platform/external/mesa3d" />
    <project path="external/drm_hwcomposer" name="lineage-rpi/android_external_drm_hwcomposer" />
    <project path="external/libdrm" name="lineage-rpi/android_external_libdrm" />
    <project path="external/mesa3d" name="lineage-rpi/android_external_mesa3d" />
    <project path="external/minigbm" name="lineage-rpi/android_external_minigbm" />

    <!-- Misc additions -->
    <project path="external/i2c-tools" name="lineage-rpi/android_external_i2c-tools" />
    <project path="external/ir-keytable" name="lineage-rpi/android_external_ir-keytable" />
    <project path="hardware/gps" name="lineage-rpi/android_hardware_gps" />
</manifest>
